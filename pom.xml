<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">

  <modelVersion>4.0.0</modelVersion>

  <groupId>com.myfirstproject</groupId>
  <artifactId>myFirstProject</artifactId>
  <version>0.0.1-SNAPSHOT</version>
  <name>My First Maven Project</name>
  <description>A simple Java project using Maven</description>

  <build>
    <plugins>
      <!-- Java 17 Compiler Plugin for Building -->
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.13.0</version>
        <configuration>
          <release>17</release>
        </configuration>
      </plugin>

      <!-- SonarQube Plugin -->
      <plugin>
        <groupId>org.sonarsource.scanner.maven</groupId>
        <artifactId>sonar-maven-plugin</artifactId>
        <version>3.9.0.2155</version> <!-- Latest version -->
      </plugin>
    </plugins>
  </build>

  <profiles>
    <!-- Java 11 Tests Profile -->
    <profile>
      <id>java11-tests</id>
      <activation>
        <activeByDefault>false</activeByDefault>
      </activation>
      <build>
        <plugins>
          <plugin>
            <artifactId>maven-compiler-plugin</artifactId>
            <version>3.13.0</version>
            <configuration>
              <release>11</release> <!-- Use Java 11 for tests -->
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>

    <!-- Java 8 Profile for SonarQube Analysis -->
    <profile>
      <id>java8-sonar</id>
      <activation>
        <activeByDefault>false</activeByDefault>
      </activation>
      <build>
        <plugins>
          <plugin>
            <artifactId>maven-compiler-plugin</artifactId>
            <version>3.13.0</version>
            <configuration>
              <release>8</release> <!-- Use Java 8 for SonarQube analysis -->
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>

  <dependencies>
    <dependency>
      <groupId>org.junit.jupiter</groupId>
      <artifactId>junit-jupiter</artifactId>
      <version>5.10.0</version>
      <scope>test</scope>
    </dependency>
  </dependencies>

</project>


